<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dvg_margin"
            android:layout_marginStart="@dimen/dvg_margin"
            android:layout_marginRight="@dimen/dvg_margin"
            android:layout_marginEnd="@dimen/dvg_margin"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPlay"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@android:drawable/ic_media_play" />
            <ImageView
                android:id="@+id/ivAddCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="65dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ivPlay"
                android:visibility="invisible"
                android:src="@drawable/point" />
            <ImageView
                android:id="@+id/btnClear"
                android:layout_width="45dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:layout_height="45dp"
                android:src="@android:drawable/ic_menu_delete" />
        </RelativeLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_marginBottom="@dimen/view_margin"
        android:layout_height="match_parent" />
    <View
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginStart="@dimen/view_margin"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/view_margin" />

    <com.dekel.pit.view.DragViewGroup
        android:id="@+id/dragViewGroup"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/soft_white">
    </com.dekel.pit.view.DragViewGroup>

</RelativeLayout>